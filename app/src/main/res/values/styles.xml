<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 기존 스타일 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 내 커스텀 테마 -->
        <item name="colorPrimary">@color/mainblue</item>        <!-- 주요 색상 -->
        <item name="colorPrimaryDark">@color/mainblue</item>    <!-- 상태바 색상 -->
        <item name="colorAccent">@color/subblue</item>          <!-- 강조 색상 -->
    </style>

    <!-- 투명 상태바 -->
    <style name="TransparentStatusBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 상태바를 투명으로 설정 -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- 상태바의 텍스트 색상(아이콘 색상)을 다크 모드로 설정 -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ButtonStyles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">@font/notosans_black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ToolbarStyles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/mainblue</item>
    </style>

    <style name="SpinnerStyles">
        <item name="android:overlapAnchor">false</item>
        <item name="overlapAnchor">false</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>