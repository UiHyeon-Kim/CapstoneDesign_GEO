<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyles" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:contentDescription=" "
        android:padding="8dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/icon_back_btn" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/toolbar"
        android:layout_alignBottom="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/notosans_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="설정"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/btnSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        android:text="소리"
        android:textColor="#000000"
        android:textSize="24sp" />

    <SeekBar
        android:id="@+id/seekBar_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSound"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/btnHaptic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar_volume"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        android:text="진동"
        android:textColor="#000000"
        android:textSize="24sp" />

    <SeekBar
        android:id="@+id/seekBar_vibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnHaptic"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/btnResetPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar_vibration"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/notosans"
        android:includeFontPadding="false"
        android:text="사용자 유형 재선택"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/btnDelopInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnResetPreferences"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/notosans"
        android:includeFontPadding="false"
        android:text="개발정보"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>