<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/geoImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_geo_profile"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:srcCompat="@drawable/icon_geo" />

        <TextView
            android:id="@+id/geoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:text="지오"
            android:textSize="22sp"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/botMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userMessage"
        android:background="@drawable/bg_spinner"
        android:fontFamily="@font/notosans"
        android:includeFontPadding="false"
        android:padding="12dp"
        android:text="안녕하세요! 저는 지오라고 해요!\n’망월사 맛집 찾아줘’ 와 같이
질문해보세요!"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/userMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/notosans"
        android:includeFontPadding="false"
        android:padding="12dp"
        android:text="안녕"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible" />
</RelativeLayout>